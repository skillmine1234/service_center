= link_to 'New I-Collect Customer', new_icol_customer_path
%br
%br
%h1 Listing I-Collect Customers
= render :partial => 'advanced_search'
%br
%br
%table.table.table-bordered.table-striped.table-hover
  .thead
    %th{:style=>'text-align:left; background-color: lightblue;'}
    %th{:style=>'text-align:left; background-color: lightblue;'}
    %th{:style=>'text-align:left; background-color: lightblue;'}
      App Code
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Customer Code			
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Validate URL
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Notify URL
			
  .tbody
    - @records.each do |customer|
      %tr
        %td{:style=>'text-align:left;'}
          = link_to 'Show', customer
        %td{:style=>'text-align:left;'}
          = link_to 'Edit', edit_icol_customer_path(customer)
        %td{:style=>'text-align:left;'}
          = customer.app_code
        %td{:style=>'text-align:left;'}
          = customer.customer_code
        %td{:style=>'text-align:left;'}
          = customer.validate_url
        %td{:style=>'text-align:left;'}
          = customer.notify_url