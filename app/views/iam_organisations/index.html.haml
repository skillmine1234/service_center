%br
= link_to "New IAM Organisation", new_iam_organisation_path
%br
%br
%h1 Listing IAM Organisations
= render :partial => 'advanced_search'
%br
= "Total Count: #{@records.count}"
= will_paginate @records, :page_links => true
%br
%table.table.table-bordered.table-striped.table-hover
  .thead
    %th{:style=>'text-align:left; background-color: lightblue;'}
    %th{:style=>'text-align:left; background-color: lightblue;'}
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Name
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Organisation UUID
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Is VPN On?
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Is Enabled?
    
  .tbody
    - @records.each do |record|
      %tr
        %td{:style=>'text-align:left;'}
          = link_to 'Show', record
        %td{:style=>'text-align:left;'}
          = link_to 'Edit', edit_iam_organisation_path(record)
        %td{:style=>'text-align:left;'}
          = record.name
        %td{:style=>'text-align:left;'}
          = record.org_uuid
        %td{:style=>'text-align:left;'}
          = record.on_vpn
        %td{:style=>'text-align:left;'}
          = record.is_enabled
        