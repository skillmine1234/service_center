.form-horizontal.show_form
  .form-main-with-color{:style=>'background-color: #F1F2F8;  height:630px;'}
    #form-details
      %h3 Instant Credit Incoming Record
      %br
      %p{:style => 'text-align:left; padding-left:6px; padding-bottom:17px;'}
      %table.table.no-border{:style=>"table-layout: fixed; width: 100%;"}
        %tr
          %td.label Version
          %td.value
            = link_to "#{audit_count(@ic_record.incoming_file_record)}", :controller => :ic_incoming_records, :action => :audit_logs, :version_id => audit_count(@ic_record.incoming_file_record), :id => @ic_record.incoming_file_record_id
        %tr
          %td.label Record Text
          %td.value
            - if @ic_record.incoming_file_record.record_txt.nil?
              .span{:class =>"has-tooltip", "data-toggle" => 'tooltip',"title" => "No Record Text Available for this record", "data-placement" => 'bottom', "data-html" => true}
                Show Record Text
            - else
              = link_to "Show Record Text", "#", :class => 'show_record_text', :href => "#recordText", data: { record_txt: @ic_record.incoming_file_record.record_txt} 
        %tr
          %td.label Supplier Code
          %td.value
            = @ic_record.supplier_code
        %tr
          %td.label Invoice No
          %td.value
            = @ic_record.invoice_no
        %tr
          %td.label Invoice Date
          %td.value
            = @ic_record.invoice_date
        %tr
          %td.label Invoice Due Date
          %td.value
            = @ic_record.invoice_due_date
        %tr
          %td.label Invoice_amount
          %td.value
            = @ic_record.invoice_amount
        %tr
          %td.label Debit Reference No
          %td.value
            = @ic_record.debit_ref_no
        %tr
          %td.label Corporate Customer ID
          %td.value
            = @ic_record.corp_customer_id
        %tr
          %td.label Incoming NEFT/RTGS UTR 
          %td.value
            = @ic_record.pm_utr
#recordText.modal.hide.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-header
    %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} ×
    %h3 Record Text
    #error_message{:style => 'color:red'}
  .modal-body{:style => "max-height:450px;"}
    .demo-area
      %button#d_clip_button1.my_clip_button1{"data-clipboard-target" => "record_txt"}
        %b Copy To Clipboard...
    %pre#record_txt{:style => 'word-wrap: break-word'}
      .reply{:style => 'word-wrap: break-word'}