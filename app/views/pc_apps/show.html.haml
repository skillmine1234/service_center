              = error_message_for(@pc_app, :is_enabled, :prepend_text => "")
          %tr
            %td.label Trace ID Prefix
            %td.value
              = @pc_app.traceid_prefix
            %td#msg-error
              = error_message_for(@pc_app, :traceid_prefix, :prepend_text => "")
          %tr
            %td.label Source ID
