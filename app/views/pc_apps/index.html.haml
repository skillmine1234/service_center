%br
= link_to 'New PC App', new_pc_app_path
%br
%br
%h1 Listing PC Apps
%h2.collapsible
  Advanced Search
  %span.caret
.collapsible-content
  = render :partial => 'advanced_search'
%br
= "Total Count: #{@pc_apps_count}"
%br
= will_paginate @pc_apps
%br
%table.table.table-bordered.table-striped.table-hover
  .thead
    %th{:style=>'text-align:left; background-color: lightblue;'}
    %th{:style=>'text-align:left; background-color: lightblue;'}
    %th{:style=>'text-align:left; background-color: lightblue;'}
      PC Program
    %th{:style=>'text-align:left; background-color: lightblue;'}
      App ID
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Card Customer ID
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Card Account
    %th{:style=>'text-align:left; background-color: lightblue;'}
      SC Income Account
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Is Enabled?
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Encrypt Password

  .tbody
    - @pc_apps.each do |pc_app|
      %tr
        %td{:style=>'text-align:left;'}
          = link_to 'Show', pc_app
        %td{:style=>'text-align:left;'}
          = link_to 'Edit', edit_pc_app_path(pc_app)
        %td{:style=>'text-align:left;'}
          = pc_app.try(:pc_program).try(:code) || '-'
        %td{:style=>'text-align:left;'}
          = pc_app.app_id
        %td{:style=>'text-align:left;'}
          = pc_app.card_cust_id
        %td{:style=>'text-align:left;'}
          = pc_app.card_acct
        %td{:style=>'text-align:left;'}
          = pc_app.sc_gl_income
        %td{:style=>'text-align:left;'}
          = pc_app.is_enabled
        %td{:style=>'text-align:left;'}
          = link_to 'Encrypt Password', pc_apps_encrypt_password_path(pc_app)