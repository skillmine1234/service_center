= simple_form_for @pc_app, :html => {:class=>'form-horizontal', :autocomplete=>"off", :id => "pc_app_form"} do |f|
  .control-group
    = f.label ' '
    #msg-error
      = error_message_for(@pc_app, :base, :prepend_text => "")
  .form-main
    = f.hidden_field :lock_version
    = f.hidden_field :approved_id
    = f.hidden_field :approved_version
    .control-group
      = f.label :program_code, "*PC Program", :class => 'control-label'
      = f.select(:program_code, PcProgram.options_for_pc_programs, :prompt => 'Select')
      #msg-error
        = error_message_for(@pc_app, :program_code, :prepend_text => "")
    .control-group
      = f.label :app_id, "*App ID", :class => 'control-label'
      = f.text_field :app_id, :maxlength => 20
      #msg-error
        = error_message_for(@pc_app, :app_id, :prepend_text => "")
    .control-group
      = f.label :is_enabled, "Is Enabled ?", :class => 'control-label'
      - if f.object.is_enabled.nil?
        = f.check_box :is_enabled, {:checked => "checked"},"Y","N"
      - else 
        = f.check_box :is_enabled, {},"Y","N"
      #msg-error
        = error_message_for(@pc_app, :is_enabled, :prepend_text => "")
    .control-group
      = f.label :identity_user_id, "*Identity User ID", :class => 'control-label'
      = f.text_field :identity_user_id, :maxlength => 20
      #msg-error
        = error_message_for(@pc_app, :identity_user_id, :prepend_text => "")
    .control-group
      = f.label :needs_pin, "Needs Pin ?", :class => 'control-label'
      = f.check_box :needs_pin, {},"Y","N"
      #msg-error
        = error_message_for(@pc_app, :needs_pin, :prepend_text => "")

  .form-actions
    - (f.object.new_record? and f.object.app_id.nil?) ? label_name = "Create" : label_name = "Update"
    = f.button "submit" ,:class=>"btn btn-primary", :id => 'submit_pc_app', :value => label_name + ' PC App'
    = link_to :Cancel,'/pc_apps', :name => 'cancel', :class=>"cancel btn"