= simple_form_for @fp_operation, :html => {:class=>'form-horizontal', :autocomplete=>"off", :id => "fp_operation_form"} do |f|
  .control-group
    = f.label ' '
    #msg-error
      = error_message_for(@fp_operation, :base, :prepend_text => "")
  .form-main
    = f.hidden_field :lock_version
    = f.hidden_field :approved_id
    = f.hidden_field :approved_version
    .control-group
      = f.label :operation_name, "*Operation Name", :class => 'control-label'
      = f.text_field :operation_name, :maxlength => 50
      #msg-error
        = error_message_for(@fp_operation, :operation_name, :prepend_text => "")

  .form-actions
    - (f.object.new_record?) ? label_name = "Create" : label_name = "Update"
    = f.button "submit" ,:class=>"btn btn-primary", :id => 'submit_fp_operation', :value => label_name + ' FP Operation'
    = link_to :Cancel,'/fp_operations', :name => 'cancel', :class=>"cancel btn"