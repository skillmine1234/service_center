= simple_form_for @purpose_code, :html => {:class=>'form-horizontal', :autocomplete=>"off", :id => "purpose_code_form"} do |f|
  .control-group
    = f.label ' '
    #msg-error
      = error_message_for(@purpose_code, :base, :prepend_text => "")
  .form-main
    = f.hidden_field :lock_version
    .control-group
      = f.label :code
      = f.text_field :code
      #msg-error
        = error_message_for(@purpose_code, :code, :prepend_text => "")
    .control-group
      = f.label :description
      = f.text_area :description, :maxlength => 200, :rows => 10
      #msg-error
        = error_message_for(@purpose_code, :description, :prepend_text => "")
    .control-group
      = f.label :enabled, '*Enabled?', :class => 'control-label'
      = f.select :is_enabled, [['Yes','Y'],['No','N']], :include_blank => "Select"
      #msg-error
        = error_message_for(@purpose_code, :is_enabled, :prepend_text => "")
    .control-group
      = f.label :transaction_limit, "*Transaction Limit", :class => 'control-label'
      = f.text_field :txn_limit
      #msg-error
        = error_message_for(@purpose_code, :txn_limit, :prepend_text => "")
    .control-group
      = f.label :daily_transaction_limit, "*Daily Transaction Limit", :class => 'control-label'
      = f.text_field :daily_txn_limit
      #msg-error
        = error_message_for(@purpose_code, :daily_txn_limit, :prepend_text => "")
    .control-group
      = f.label :disallowed_rem_types, "Disallowed Remitter Types", :class => 'control-label'
      = f.select :disallowed_rem_types, PurposeCode.options_for_bene_and_rem_types,{},{ :multiple => true}
      #msg-error
        = error_message_for(@purpose_code, :disallowed_rem_types, :prepend_text => "")
    .control-group
      = f.label :disallowed_bene_types, "Disallowed Beneficiary Types", :class => 'control-label'
      = f.select :disallowed_bene_types, PurposeCode.options_for_bene_and_rem_types,{}, { :multiple => true}
      #msg-error
        = error_message_for(@purpose_code, :disallowed_bene_types, :prepend_text => "")
  .form-actions
    = f.button "submit" ,:class=>"btn btn-primary", :id => 'submit_purpose_code'
    = link_to :Cancel,'/purpose_codes', :name => 'cancel', :class=>"cancel btn"

