.form-horizontal.show_form
  .form-main-with-color{:style=>'background-color: #F1F2F8;'}
    #form-details
      %h3 Purpose Code Details 
      %br
      %p{:style => 'text-align:left; padding-left:6px; padding-bottom:17px'}
        = link_to 'Edit', edit_purpose_code_path
      %table.table.no-border{:style=>"table-layout: fixed; width: 100%"}
        - if !@purpose_code.nil?
          %tr
            %td.label Version
            %td.value
              = link_to "#{audit_count(@purpose_code)}", :controller => :purpose_codes, :action => :audit_logs, :version_id => audit_count(@purpose_code), :id => @purpose_code.id
          %tr
            %td.label Form Errors
            %td.value
              = ' '
            %td#msg-error
              = error_message_for(@purpose_code, :base, :prepend_text => "")
          %tr
            %td.label Code
            %td.value
              = @purpose_code.code
            %td#msg-error
              = error_message_for(@purpose_code, :code, :prepend_text => "")
          %tr
            %td.label Description
            %td.value
              = @purpose_code.description
            %td#msg-error
              = error_message_for(@purpose_code, :description, :prepend_text => "")
          %tr
            %td.label Enabled?
            %td.value
              = @purpose_code.is_enabled
            %td#msg-error
              = error_message_for(@purpose_code, :is_enabled, :prepend_text => "")
          %tr
            %td.label Transaction Limit
            %td.value
              = @purpose_code.txn_limit
            %td#msg-error
              = error_message_for(@purpose_code, :txn_limit, :prepend_text => "")
          %tr
            %td.label Daily Transaction Limit
            %td.value
              = @purpose_code.daily_txn_limit
            %td#msg-error
              = error_message_for(@purpose_code, :daily_txn_limit, :prepend_text => "")
          %tr
            %td.label Disallowed Remitter Types
            %td.value
              = disallowed_bene_and_rem_types_on_show_page(@purpose_code.disallowed_rem_types)
            %td#msg-error
              = error_message_for(@purpose_code, :disallowed_rem_types, :prepend_text => "")
          %tr
            %td.label Disallowed Beneficiary Types
            %td.value
              = disallowed_bene_and_rem_types_on_show_page(@purpose_code.disallowed_bene_types)
            %td#msg-error
              = error_message_for(@purpose_code, :disallowed_bene_types, :prepend_text => "")
          %tr
            %td.label Created By
            %td
              = @purpose_code.created_user.try(:username)
            %td#msg-error
              = error_message_for(@purpose_code, :created_by, :prepend_text => "")
          %tr
            %td.label Updated By
            %td
              = @purpose_code.updated_user.try(:username)
            %td#msg-error
              = error_message_for(@purpose_code, :updated_by, :prepend_text => "")
          %tr
            %td.label Created At
            %td.value
              = @purpose_code.created_at.strftime("%d/%m/%Y %I:%M%p")
            %td#msg-error
              = error_message_for(@purpose_code, :created_at, :prepend_text => "")
          %tr
            %td.label Updated At
            %td.value
              = @purpose_code.updated_at.strftime("%d/%m/%Y %I:%M%p")
            %td#msg-error
              = error_message_for(@purpose_code, :updated_at, :prepend_text => "")
      = link_to 'Back to purpose_codes', purpose_codes_path
