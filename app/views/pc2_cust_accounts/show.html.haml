.form-horizontal.show_form
  .form-main-with-color{:style=>'background-color: #F1F2F8; height:950px;'}
    #form-details
      %h3 PC2 Customer Account Details 
      %br
      %p{:style => 'text-align:left; padding-left:6px; padding-bottom:17px'}
        - can = can? :edit, @pc2_cust_account
        %a.btn{:href => "#{!(can) ? '#' : '/pc2_cust_accounts/' + @pc2_cust_account.id.to_s + '/edit'}", :role => "button", :class => "btn btn-primary #{(can) ? '' : 'disabled'}"} Edit
        = render 'pc2_cust_accounts/approve', :@record => @pc2_cust_account
      %table.table.no-border{:style=>"table-layout: fixed; width: 100%;"}
        - if !@pc2_cust_account.nil?
          %tr
            %td.label Version
            %td.value
              = link_to "#{audit_count(@pc2_cust_account)}", :controller => :pc2_cust_accounts, :action => :audit_logs, :version_id => audit_count(@pc2_cust_account), :id => @pc2_cust_account.id
          %tr
            %td.label Form Errors
            %td.value
              = ' '
            %td#msg-error
              = error_message_for(@pc2_cust_account, :base, :prepend_text => "")
          %tr
            %td.label Customer ID
            %td.value
              = @pc2_cust_account.customer_id
            %td#msg-error
              = error_message_for(@pc2_cust_account, :customer_id, :prepend_text => "")
          %tr
            %td.label Account No
            %td.value
              = @pc2_cust_account.account_no
            %td#msg-error
              = error_message_for(@pc2_cust_account, :account_no, :prepend_text => "")
          %tr
            %td.label Is Enabled?
            %td.value
              = @pc2_cust_account.is_enabled
            %td#msg-error
              = error_message_for(@pc2_cust_account, :is_enabled, :prepend_text => "")
          %tr
            %td.label Created By
            %td.value
              = @pc2_cust_account.created_user.try(:username)
            %td#msg-error
              = error_message_for(@pc2_cust_account, :created_by, :prepend_text => "")
          %tr
            %td.label Updated By
            %td.value
              = @pc2_cust_account.updated_user.try(:username)
            %td#msg-error
              = error_message_for(@pc2_cust_account, :updated_by, :prepend_text => "")
          %tr
            %td.label Created At
            %td.value
              = @pc2_cust_account.created_at.try(:strftime, "%d/%m/%Y %I:%M%p")
            %td#msg-error
              = error_message_for(@pc2_cust_account, :created_at, :prepend_text => "")
          %tr
            %td.label Updated At
            %td.value
              = @pc2_cust_account.updated_at.try(:strftime, "%d/%m/%Y %I:%M%p")
            %td#msg-error
              = error_message_for(@pc2_cust_account, :updated_at, :prepend_text => "")