            %td.value
              = @funds_transfer_customer.updated_user.try(:username)
            %td#msg-error
              = error_message_for(@funds_transfer_customer, :updated_by, :prepend_text => "")
          %tr
            %td.label Created At
            %td.value
              = @funds_transfer_customer.created_at.try(:strftime, "%d/%m/%Y %I:%M%p")
            %td#msg-error
              = error_message_for(@funds_transfer_customer, :created_at, :prepend_text => "")
