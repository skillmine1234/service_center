.form-horizontal.show_form
  .form-main-with-color{:style=>'background-color: #F1F2F8;'}
    #form-details
      %h3 PC Fee Rule Details 
      %br
      %p{:style => 'text-align:left; padding-left:6px; padding-bottom:17px'}
        - can = can? :edit, @pc_fee_rule
        %a.btn{:href => "#{!(can) ? '#' : '/pc_fee_rules/' + @pc_fee_rule.id.to_s + '/edit'}", :role => "button", :class => "btn btn-primary #{(can) ? '' : 'disabled'}"} Edit
        = render 'pc_apps/approve', :@record => @pc_fee_rule
      %table.table.no-border{:style=>"table-layout: fixed; width: 100%;"}
        - if !@pc_fee_rule.nil?
          %tr
            %td.label Version
            %td.value
              = link_to "#{audit_count(@pc_fee_rule)}", :controller => :pc_fee_rules, :action => :audit_logs, :version_id => audit_count(@pc_fee_rule), :id => @pc_fee_rule.id
          %tr
            %td.label Form Errors
            %td.value
              = ' '
            %td#msg-error
              = error_message_for(@pc_fee_rule, :base, :prepend_text => "")
          %tr
            %td.label PC Program
            %td.value
              = @pc_fee_rule.pc_program.code
            %td#msg-error
              = error_message_for(@pc_fee_rule, :pc_program_id, :prepend_text => "")
          %tr
            %td.label Transaction Kind
            %td.value
              = @pc_fee_rule.txn_kind
            %td#msg-error
              = error_message_for(@pc_fee_rule, :txn_kind, :prepend_text => "")
          %tr
            %td.label No. Of Tiers
