- btn_class = case object.status_code; when :COMPLETED; 'btn-success'; when :FAILED, :RETURNED_FROM_BENEFICIARY; 'btn-danger'; when nil , "";  else 'btn-info'; end
%button.btn.btn-xs{"data-target": "##{id}", "data-toggle": "modal", type: "button", class: btn_class} #{object.status_code || "NA"}
- if object.status_code == :FAILED
  .modal.fade{role: "dialog", id: "#{id}"}
    .modal-dialog
      .modal-content
        .modal-header
          %button.close{"data-dismiss": "modal", type: "button"} Ã—
          %h4.modal-title #{object.status_code}
        .modal-body
          %p #{object.fault_code}
          %p #{object.fault_subcode}
          %p #{object.fault_reason}
        .modal-footer
          %button.btn.btn-default{"data-dismiss": "modal", type: "button"} Close