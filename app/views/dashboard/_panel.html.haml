- m = build_menu(group)
- unless m.nil?
  %h1 #{m[:name]}
  .slide-container
    .box  
      = link_to unapproved_records_path(group_name: m[:group]) do
        = image_tag 'work-list.jpg', :size => "80x80"
      %br
        = "Approval Worklist"
    - unless m[:common_items].empty?
      - if m[:common_items].include?(:incoming_file)
        .box
          = link_to incoming_files_path(:sc_service => sc_service) do
            = image_tag 'upload.png', :size => "80x80"
          %br
            = "File Uploads"
      - if m[:common_items].include?(:outgoing_file)
        .box
          = link_to outgoing_files_path(:sc_service => "ECOL") do
            = image_tag 'outgoing_file.png', :size => "80x80"
          %br
            = "Outgoing Files"
  .slide-container
    - m[:items].each do |i|
      .box
        = link_to i[:link_to] do
          = image_tag i[:image_tag], :size => i[:size]
        %br
          = i[:name]