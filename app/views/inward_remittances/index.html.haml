%br
%h1 Listing Inward Remittances
%h2.collapsible
  Advanced Search
  %span.caret
.collapsible-content
  = render :partial => 'advanced_search'
%br
= "Total Count: #{@inward_remittances_count}"
%br
= will_paginate @inward_remittances
%br
%table.table.table-bordered.table-striped.table-hover
  .thead
    %th{:style=>'text-align:left; background-color: lightblue;'}
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Status
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Request No
    %th{:style=>'Text-align:left; background-color: lightblue;'}
      Partner
    %th{:style=>'Text-align:left; background-color: lightblue;'}
      Remitter Name
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Beneficiary Name
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Request Transfer Type
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Transfer Type
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Transfer Amount 
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Request Date
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Response Date
  .tbody
    - @inward_remittances.each do |inward_remittance|   
      %tr
        %td{:style=>'text-align:left;'}
          = link_to 'Show', inward_remittance
        %td{:style=>'text-align:left;'}
          = inward_remittance.status_code
        %td{:style=>'text-align:left;'}
          = inward_remittance.req_no
        %td{:style=>'text-align:left;'}
          = inward_remittance.partner_code.to_s + "-" +inward_remittance.partner.try(:name).to_s
        %td{:style=>'text-align:left;'}
          = inward_remittance.rmtr_full_name
        %td{:style=>'text-align:left;'}
          = inward_remittance.bene_full_name
        %td{:style=>'text-align:left;'}
          = inward_remittance.req_transfer_type
        %td{:style=>'text-align:left;'}
          = inward_remittance.transfer_type
        %td{:style=>'text-align:left;'}
          = inward_remittance.transfer_amount
        %td{:style=>'text-align:left;'}
          = inward_remittance.req_timestamp.try(:strftime, "%d/%m/%Y %I:%M%p")
        %td{:style=>'text-align:left;'}
          = inward_remittance.rep_timestamp.try(:strftime, "%d/%m/%Y %I:%M%p")