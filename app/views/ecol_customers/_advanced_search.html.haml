= form_tag '', :method => 'get', :class => 'form-horizontal', :autocomplete=>"off" do
  .control-group
    = label_tag "Customer Code", "Customer Code", :class => 'control-label'
    = text_field_tag :code, params[:code]
  .control-group
    = label_tag "Enabled?", "Enabled?", :class => 'control-label'
    = select_tag :is_enabled, options_for_select([['Yes','Y'],['No','N']],params[:is_enabled]),:prompt => "ANY"
  .control-group
    = label_tag "Credit Account No (Validation Pass)", "Credit Account No (Validation Pass)", :class => 'control-label'
    = text_field_tag :credit_acct_val_pass, params[:credit_acct_val_pass]
  .control-group
    = label_tag "Credit Account No (Validation Fail)", "Credit Account No (Validation Fail)", :class => 'control-label'
    = text_field_tag :credit_acct_val_fail, params[:credit_acct_val_fail]
    = hidden_field_tag :approval_status, params[:approval_status]
  .form-actions
    = submit_tag "Search", :name => nil, :class => 'btn btn-primary', :id => "adv_search_button"
    = button_tag "Reset", :type => 'button', :value=>'Reset', :class => 'btn', :id => 'ecol_customer_reset'
  = hidden_field_tag :advanced_search, :true

:javascript
  var in_advanced_search = true;
