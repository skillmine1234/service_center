= form_tag '', :method => 'get', :class => 'form-horizontal', :autocomplete=>"off" do
  .control-group
    = label_tag "Corporate Account No", "Corporate Account No", :class => 'control-label'
    = text_field_tag :corp_account_no, params[:corp_account_no]
  .control-group
    = label_tag "Employee Account No", "Employee Account No", :class => 'control-label'
    = text_field_tag :emp_account_no, params[:emp_account_no]
  .control-group
    = label_tag "Employee Name", "Employee Name", :class => 'control-label'
    = text_field_tag :emp_name, params[:emp_name]
  .control-group
    = label_tag "Salary Amount", nil, :class => 'control-label'
    = text_field_tag :from_amount, params[:from_amount]
    To
    = text_field_tag :to_amount, params[:to_amount]
  = hidden_field_tag :file_name, params[:file_name]
  = hidden_field_tag :status, params[:status]
  = hidden_field_tag :advanced_search, :true
  .form-actions
    = submit_tag "Search", :name => nil, :class => 'btn btn-primary', :id => "adv_search_button"
    = button_tag "Reset", :type => 'button', :value=>'Reset', :class => 'btn', :id => 'adv_search_reset_button'

:javascript
  var in_advanced_search = true;
