
<h1>Listing LDAP Users</h1>

<br/>
<br/>
<table class="table table-bordered table-striped table-hover">
  <div class="thead">
    <th style="text-align:left; background-color: lightblue;">
      Account Name
    </th>
    <th style="text-align:left; background-color: lightblue;">
      Username
    </th>
    <th style="text-align:left; background-color: lightblue;">
      Crerated TimeStamp
    </th>
    <th style="text-align:left; background-color: lightblue;">
      Last Login TimeStamp
    </th>
  </div>
  <div class="tbody">
    <% @users_list.each do |record| %>
        <% record.each do |data| %>
        <tr>
          <td style="text-align:left;">
            <%= data[0] %>
          </td>
          <td style="text-align:left;">
            <%= data[1] %>
          </td>
          <td style="text-align:left;">
            <%= data[2].to_time %>
          </td>
          <td style="text-align:left;">
            <% unixTime = data[3].to_i/10000000-11644473600%>
            <%= rubyTime = Time.at(unixTime) %>
          </td>
        <tr>  
      <% end %>
    <% end %>
  </div>
</table>
