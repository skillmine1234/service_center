%br
= link_to 'New Instant Credit Supplier', new_ic_supplier_path
%br
%br
%h1 Listing Instant Credit Suppliers
%h2.collapsible
  Advanced Search
  %span.caret
.collapsible-content
  = render :partial => 'advanced_search'
%br
= "Total Count: #{@ic_suppliers_count}"
%br
= will_paginate @ic_suppliers
%br

%table.table.table-bordered.table-striped.table-hover
  .thead
    %th{:style=>'text-align:left; background-color: lightblue;'}
    %th{:style=>'text-align:left; background-color: lightblue;'}
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Supplier Code
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Supplier Name
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Customer ID
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Corporate Customer ID
    %th{:style=>'text-align:left; background-color: lightblue;'}
      = "Supplier's Over Draft Account"
    %th{:style=>'text-align:left; background-color: lightblue;'}
      = "Supplier's Current Account"
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Enabled?

  .tbody
    - @ic_suppliers.each do |ic_supplier|
      %tr
        %td{:style=>'text-align:left;'}
          = link_to 'Show', ic_supplier
        %td{:style=>'text-align:left;'}
          = link_to 'Edit', edit_ic_supplier_path(ic_supplier)
        %td{:style=>'text-align:left;'}
          = ic_supplier.supplier_code
        %td{:style=>'text-align:left;'}
          = ic_supplier.supplier_name
        %td{:style=>'text-align:left;'}
          = ic_supplier.customer_id
        %td{:style=>'text-align:left;'}
          = ic_supplier.corp_customer_id
        %td{:style=>'text-align:left;'}
          = ic_supplier.od_account_no
        %td{:style=>'text-align:left;'}
          = ic_supplier.ca_account_no
        %td{:style=>'text-align:left;'}
          = ic_supplier.is_enabled
        

