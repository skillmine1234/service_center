= form_tag '', :method => 'get', :class => 'form-horizontal', :autocomplete=>"off" do
  .control-group
    = label_tag "Customer ID", "Customer ID", :class => 'control-label'
    = text_field_tag :customer_id, params[:customer_id]
  .control-group
    = label_tag "Application ID", "Application ID", :class => 'control-label'
    = text_field_tag :app_id, params[:app_id]
  .control-group
    = label_tag "Identity User ID", "Identity User ID", :class => 'control-label'
    = text_field_tag :identity_user_id, params[:identity_user_id]
  .control-group
    = label_tag "Repayment Account No", "Repayment Account No", :class => 'control-label'
    = text_field_tag :repay_account_no, params[:repay_account_no]
  .control-group
    = label_tag "Fee Percentage", "Fee Percentage", :class => 'control-label'
    = text_field_tag :fee_pct, params[:fee_pct]
  .control-group
    = label_tag "Fee Income Account No", "Fee Income Account No", :class => 'control-label'
    = text_field_tag :fee_income_gl, params[:fee_income_gl]
    = hidden_field_tag :approval_status, params[:approval_status]
  .form-actions
    = submit_tag "Search", :name => nil, :class => 'btn btn-primary', :id => "adv_search_button"
    = button_tag "Reset", :type => 'button', :value=>'Reset', :class => 'btn', :id => 'adv_search_reset_button'
  = hidden_field_tag :advanced_search, :true

:javascript
  var in_advanced_search = true;
