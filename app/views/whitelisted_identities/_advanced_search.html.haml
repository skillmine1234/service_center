%h2.collapsible
  Advanced Search
  %span.caret
.collapsible-content
  = form_tag whitelisted_identities_path, :method => :put, :class => 'form-horizontal', :autocomplete=>"off", id: 'advanced_search' do
    .control-group
      = label_tag ' '
      #msg-error
        = error_message_for(@searcher, :base)
    .control-group
      = label_tag :partner_code, "Partner Code*", :class => 'control-label'
      = text_field_tag :partner_code, params[:partner_code]
    .control-group
      = label_tag :name, "Name", :class => 'control-label'
      = text_field_tag :name, params[:name]
    .control-group
      = label_tag :remitter_code, "Remitter Code", :class => 'control-label'
      = text_field_tag :rmtr_code, params[:rmtr_code]
    .control-group
      = label_tag :beneficiary_account_no, "Beneficiary Account No", :class => 'control-label'
      = text_field_tag :bene_account_no, params[:bene_account_no]
    .control-group
      = label_tag :beneficiary_account_ifsc, "Beneficiary Account IFSC", :class => 'control-label'
      = text_field_tag :bene_account_ifsc, params[:bene_account_ifsc]
      = hidden_field_tag :page, params[:page] || 1
      = hidden_field_tag :approval_status, params[:approval_status]
    .form-actions
      = submit_tag "Search", :name => nil, :class => 'btn btn-primary', :id => "adv_search_button",onclick: "$('#page').val(1)"
      = button_tag "Reset", :type => 'button', :value=>'Reset', :class => 'btn', :id => 'adv_search_reset_button'

- if @searcher.errors.present?
  :javascript
    $('.collapsible-content').show(); 

= advanced_search_page_links