%h1 Unapproved Inward Remittance Rule
%br
%table.table.table-bordered.table-striped.table-hover
  .thead
    %th{:style=>'text-align:left; background-color: lightblue;'}
    %th{:style=>'text-align:left; background-color: lightblue;'}
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Disallowed Keywords in Name for Individuals
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Required Keywords in Name for Corporates
    %th{:style=>'text-align:left; background-color: lightblue;'} 
      Disallowed Keywords in Name for Beneficiaries
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Disallowed Remitter Name
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Known Salutations For Individuals
  .tbody
    - @rules.each do |inw_remittance_rule|
      %tr
        %td{:style=>'text-align:left;'}
          = link_to 'Show', inw_remittance_rule
        %td{:style=>'text-align:left;'}
          = link_to 'Edit', edit_inw_remittance_rule_path(inw_remittance_rule)
        %td{:style=>'text-align:left;'}
          = inw_remittance_rule.pattern_individuals
        %td{:style=>'text-align:left;'}
          = inw_remittance_rule.pattern_corporates
        %td{:style=>'text-align:left;'}
          = inw_remittance_rule.pattern_beneficiaries
        %td{:style=>'text-align:left;'}
          = inw_remittance_rule.pattern_remitters
        %td{:style=>'text-align:left;'}
          = inw_remittance_rule.pattern_salutations