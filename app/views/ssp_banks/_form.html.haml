= simple_form_for @ssp_bank, :html => {:class=>'form-horizontal', :autocomplete=>"off", :id => "ssp_bank_form"} do |f|
  .control-group
    - if @ssp_bank.errors.any?
      #msg-error
        - @ssp_bank.errors.full_messages.each do |msg|
          = msg
          %br
  .form-main
    = f.hidden_field :lock_version
    = f.hidden_field :approved_id
    = f.hidden_field :approved_version
    = f.hidden_field :settings_cnt
    .control-group
      = f.label :is_enabled, "Is Enabled ?", :class => 'control-label'
      = f.check_box :is_enabled, {},"Y","N"
      #msg-error
        = error_message_for(@ssp_bank, :is_enabled, :prepend_text => "")
    .control-group
      = f.label :use_proxy, "Use Proxy", :class => 'control-label'
      = f.check_box :use_proxy, {},"Y","N"
      #msg-error
        = error_message_for(@ssp_bank, :use_proxy, :prepend_text => "")
    .control-group
      = f.label :app_code, "*App Code", :class => 'control-label'
      = f.text_field :app_code, maxlength: 50
    .control-group
      = f.label :customer_code, "*Customer Code", :class => 'control-label'
      = f.text_field :customer_code, maxlength: 15
    .control-group
      = f.label :debit_account_url, "Debit Account URL", :class => 'control-label'
      = f.text_field :debit_account_url, maxlength: 100
    .control-group
      = f.label :reverse_debit_account_url, "Reverse Debit Account URL", :class => 'control-label'
      = f.text_field :reverse_debit_account_url,  maxlength: 100
    .control-group
      = f.label :get_status_url, "Get Status URL", :class => 'control-label'
      = f.text_field :get_status_url, maxlength: 100
    .control-group
      = f.label :get_account_status_url, "Get Account Status URL", :class => 'control-label'
      = f.text_field :get_account_status_url, maxlength: 100
    .control-group
      = f.label :http_username, "HTTP Username", :class => 'control-label'
      = f.text_field :http_username, maxlength: 100
    .control-group
      = f.label :http_password, "HTTP Password", :class => 'control-label'
      = f.password_field :http_password, :value => f.object.http_password, maxlength: 100
    .control-group
      %table.table.datatable
        %thead
          %tr
            %th Setting
            %th Name
            %th Type
            %th Value
        %tbody
          - (1..5).each do |i|
            %tr
              %td
                = i
              %td
                = f.text_field "setting#{i}_name"
              %td
                = f.select "setting#{i}_type", options_for_select(SspBank::SETTING_TYPES, @ssp_bank.send("setting#{i}_type"))
              %td
                = f.text_field "setting#{i}_value"
  .form-actions
    - (f.object.new_record? and f.object.app_code.nil?) ? label_name = "Create" : label_name = "Update"
    = f.button "submit" ,:class=>"btn btn-primary", :id => 'submit_ssp_bank', :value => label_name + ' Ssp Bank'
    = link_to :Cancel,'/ssp_banks', :name => 'cancel', :class=>"cancel btn"
