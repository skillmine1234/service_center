= form_tag '', :method => 'get', :class => 'form-horizontal', :autocomplete=>"off" do
  .control-group
    = label_tag "App ID", "App ID", :class => 'control-label'
    = text_field_tag :app_id, params[:app_id]
  .control-group
    = label_tag "Channel ID", "Channel ID", :class => 'control-label'
    = text_field_tag :channel_id, params[:channel_id]
  = hidden_field_tag :advanced_search, :true

  .form-actions
    = submit_tag "Search", :name => nil, :class => 'btn btn-primary', :id => "adv_search_button"
    = button_tag "Reset", :type => 'button', :value=>'Reset', :class => 'btn', :id => 'bm_app_reset'

:javascript
  var in_advanced_search = true;

