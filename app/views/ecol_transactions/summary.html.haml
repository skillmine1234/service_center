%h1 E-Collect Transaction Summary
%br
%br
%table.table.table-bordered.table-striped.table-hover
  .thead 
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Status
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Pending Approval
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Total
  .tbody
    - @ecol_transaction_statuses.each do |s|
      %tr
        %td{:style=>'text-align:left;'}
          = s 
        %td{:style=>'text-align:left;'}
          = link_to txn_summary_count(@ecol_transaction_summary, [s,'Y']), ecol_transactions_path({:status => s, :pending => 'Y', :summary => true})
        %td{:style=>'text-align:left;'}
          = link_to txn_summary_count(@ecol_transaction_summary, [s, 'Y']) + txn_summary_count(@ecol_transaction_summary, [s, 'N']), ecol_transactions_path({:status => s, :summary => true})
    %tr
      %td{:style=>'text-align:left;'}
        = 'ALL'
      %td{:style=>'text-align:left;'}
        = link_to @total_pending_records, ecol_transactions_path({:pending => 'Y', :summary => true})
      %td{:style=>'text-align:left;'}
        = link_to @total_records, ecol_transactions_path