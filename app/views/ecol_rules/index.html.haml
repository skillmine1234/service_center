%br
%h1 Unapproved E-Collect Rule
%br
%table.table.table-bordered.table-striped.table-hover
  .thead
    %th{:style=>'text-align:left; background-color: lightblue;'}
    %th{:style=>'text-align:left; background-color: lightblue;'}
    %th{:style=>'text-align:left; background-color: lightblue;'}
    %th{:style=>'text-align:left; background-color: lightblue;'}
      IFSC Code
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Pool Account No
    %th{:style=>'text-align:left; background-color: lightblue;'} 
      Remitter Code
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Settlement GL (Inward)
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Settlement GL (Return)
    %th{:style=>'text-align:left; background-color: lightblue;'}
      NEFT Sender IFSC
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Customer ID
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Return Account No
  .tbody
    - @ecol_rules.each do |ecol_rule|
      %tr
        %td{:style=>'text-align:left;'}
          = link_to 'Show', ecol_rule
        %td{:style=>'text-align:left;'}
          = link_to 'Edit', edit_ecol_rule_path(ecol_rule)
        %td{:style=>'text-align:left;'}
          - if ecol_rule.approval_status == 'U'
            = link_to 'Cancel', ecol_rule, :method => :delete, :data => { :confirm => 'Are you sure?' }
          - else
            = ""
        %td{:style=>'text-align:left;'}
          = ecol_rule.ifsc
        %td{:style=>'text-align:left;'}
          = ecol_rule.cod_acct_no
        %td{:style=>'text-align:left;'}
          = ecol_rule.neft_sender_ifsc
        %td{:style=>'text-align:left;'}
          = ecol_rule.customer_id
        %td{:style=>'text-align:left;'}
          = ecol_rule.return_account_no