= form_tag cnb2_incoming_records_path, :method => :post, :class => 'form-horizontal', :autocomplete=>"off" do
  .control-group
    = label_tag "Paying Company Code", "Paying Company Code", :class => 'control-label'
    = text_field_tag :pay_comp_code, params[:pay_comp_code]

  .control-group
    = label_tag "Vendor Code", "Vendor Code", :class => 'control-label'
    = text_field_tag :vendor_code, params[:vendor_code]

  .control-group
    = label_tag "Beneficiary Account No", "Beneficiary Account No", :class => 'control-label'
    = text_field_tag :bene_account_no, params[:bene_account_no]

  = hidden_field_tag :file_name, params[:file_name]
  = hidden_field_tag :status, params[:status]
  .form-actions
    = submit_tag "Search", :name => nil, :class => 'btn btn-primary', :id => "adv_search_button"
    = button_tag "Reset", :type => 'button', :value=>'Reset', :class => 'btn', :id => 'adv_search_reset_button'

:javascript
  var in_advanced_search = true;
