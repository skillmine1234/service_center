.form-horizontal.show_form
  .form-main-with-color{:style=>'background-color: #F1F2F8; height:950px;'}
    #form-details
      %h3 PC Product Details 
      %br
      %p{:style => 'text-align:left; padding-left:6px; padding-bottom:17px'}
        - can = can? :edit, @pc_product
        %a.btn{:href => "#{!(can) ? '#' : '/pc_products/' + @pc_product.id.to_s + '/edit'}", :role => "button", :class => "btn btn-primary #{(can) ? '' : 'disabled'}"} Edit
        = render 'pc_products/approve', :@record => @pc_product
      %table.table.no-border{:style=>"table-layout: fixed; width: 100%;"}
        - if !@pc_product.nil?
          %tr
            %td.label Version
            %td.value
              = link_to "#{audit_count(@pc_product)}", :controller => :pc_products, :action => :audit_logs, :version_id => audit_count(@pc_product), :id => @pc_product.id
          %tr
            %td.label Form Errors
            %td.value
              = ' '
            %td#msg-error
              = error_message_for(@pc_product, :base, :prepend_text => "")
          %tr
            %td.label Is Enabled?
            %td.value
              = @pc_product.is_enabled
            %td#msg-error
              = error_message_for(@pc_product, :is_enabled, :prepend_text => "")
          %tr
            %td.label Code
            %td.value
              = @pc_product.code
            %td#msg-error
              = error_message_for(@pc_product, :code, :prepend_text => "")
          %tr
            %td.label Product Name
            %td.value
              = @pc_product.display_name
            %td#msg-error
              = error_message_for(@pc_product, :display_name, :prepend_text => "")
          %tr
            %td.label MM Host
            %td.value
              = @pc_product.mm_host
            %td#msg-error
              = error_message_for(@pc_product, :mm_host, :prepend_text => "")
          %tr
            %td.label MM Consumer Key
