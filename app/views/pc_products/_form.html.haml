= simple_form_for @pc_product, :html => {:class=>'form-horizontal', :autocomplete=>"off", :id => "pc_product_form"} do |f|
  .control-group
    = f.label ' '
    #msg-error
      = error_message_for(@pc_product, :base, :prepend_text => "")
  .form-main
    = f.hidden_field :lock_version
    = f.hidden_field :approved_id
    = f.hidden_field :approved_version
    .control-group
      = f.label :is_enabled, "Enabled?", :class => 'control-label'
      - if f.object.is_enabled.nil?
        = f.check_box :is_enabled, {:checked => "checked"},"Y","N"
      - else 
        = f.check_box :is_enabled, {},"Y","N"
      #msg-error
        = error_message_for(@pc_product, :is_enabled, :prepend_text => "")
    .control-group
      = f.label :code, "*Code", :class => 'control-label'
      = f.text_field :code, :required => true, :maxlength => 15
      #msg-error
        = error_message_for(@pc_product, :code, :prepend_text => "")
    .control-group
      = f.label :display_name, "Display Name", :class => 'control-label'
      = f.text_field :display_name, :maxlength => 15
      #msg-error
        = error_message_for(@pc_app, :display_name, :prepend_text => "")
    .control-group
      = f.label :mm_host, "*MM Host", :class => 'control-label'
      = f.text_field :mm_host, :required => true, :maxlength => 255
      #msg-error
        = error_message_for(@pc_product, :mm_host, :prepend_text => "")
    .control-group
      = f.label :mm_consumer_key, "*MM Consumer Key", :class => 'control-label'
      = f.text_field :mm_consumer_key, :required => true, :maxlength => 255
      #msg-error
        = error_message_for(@pc_product, :mm_consumer_key, :prepend_text => "")
    .control-group
      = f.label :mm_consumer_secret, "*MM Consumer Secret", :class => 'control-label'
      = f.text_field :mm_consumer_secret, :required => true, :maxlength => 255
      #msg-error
        = error_message_for(@pc_product, :mm_consumer_secret, :prepend_text => "")
    .control-group
      = f.label :mm_card_type, "*MM Card Type", :class => 'control-label'
      = f.text_field :mm_card_type, :required => true, :maxlength => 255
      #msg-error
        = error_message_for(@pc_product, :mm_card_type, :prepend_text => "")
    .control-group
      = f.label :mm_email_domain, "*MM Email Domain", :class => 'control-label'
      = f.text_field :mm_email_domain, :required => true, :maxlength => 255
      #msg-error
        = error_message_for(@pc_product, :mm_email_domain, :prepend_text => "")
    .control-group
      = f.label :mm_admin_host, "*MM Admin Host", :class => 'control-label'
      = f.text_field :mm_admin_host, :required => true, :maxlength => 255
      #msg-error
        = error_message_for(@pc_product, :mm_admin_host, :prepend_text => "")
    .control-group
      = f.label :mm_admin_user, "*MM Admin User", :class => 'control-label'
      = f.text_field :mm_admin_user, :required => true, :maxlength => 255
      #msg-error
        = error_message_for(@pc_product, :mm_admin_user, :prepend_text => "")
    .control-group
      = f.label :mm_admin_password, "*MM Admin Password", :class => 'control-label'
      = f.password_field :mm_admin_password, :required => true, :maxlength => 255
      #msg-error
        = error_message_for(@pc_product, :mm_admin_password, :prepend_text => "")
    .control-group
      = f.label :card_acct, "*Card Account", :class => 'control-label'
      = f.text_field :card_acct, :maxlength => 20
      #msg-error
        = error_message_for(@pc_app, :card_acct, :prepend_text => "")    
    .control-group
      = f.label :sc_gl_income, "*SC Income Account", :class => 'control-label'
      = f.text_field :sc_gl_income, :maxlength => 15
      #msg-error
        = error_message_for(@pc_app, :sc_gl_income, :prepend_text => "")
    .control-group
      = f.label :cust_care_no, "Product Call Centre Number", :class => 'control-label'
      = f.text_field :cust_care_no, :maxlength => 16
      #msg-error
        = error_message_for(@pc_app, :cust_care_no, :prepend_text => "")
    .control-group
      = f.label :rkb_user, "*RKB User Name", :class => 'control-label'
      = f.text_field :rkb_user, :maxlength => 30
      #msg-error
        = error_message_for(@pc_app, :rkb_user, :prepend_text => "")
    .control-group
      = f.label :rkb_password, "*RKB Password", :class => 'control-label'
      = f.password_field :rkb_password, :maxlength => 40
      #msg-error
        = error_message_for(@pc_app, :rkb_password, :prepend_text => "")
    .control-group
      = f.label :rkb_bcagent, "*RKB BC Agent", :class => 'control-label'
      = f.text_field :rkb_bcagent, :maxlength => 50
      #msg-error
        = error_message_for(@pc_app, :rkb_bcagent, :prepend_text => "")
    .control-group
      = f.label :rkb_channel_partner, "*RKB Channel Partner ID", :class => 'control-label'
      = f.text_field :rkb_channel_partner, :maxlength => 50
      #msg-error
        = error_message_for(@pc_app, :rkb_channel_partner, :prepend_text => "")

  .form-actions
    - (f.object.new_record? and f.object.code.nil?) ? label_name = "Create" : label_name = "Update"
    = f.button "submit" ,:class=>"btn btn-primary", :id => 'submit_pc_product', :value => label_name + ' PC Program'
    = link_to :Cancel,'/pc_products', :name => 'cancel', :class=>"cancel btn"
