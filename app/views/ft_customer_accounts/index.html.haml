%br
= link_to 'New Funds Transfer Customer Account', new_ft_customer_account_path
%br
%br
%h1 Listing Funds Transfer Customer Accounts
%h2.collapsible
  Advanced Search
  %span.caret
.collapsible-content
  = render :partial => 'advanced_search'
%br
= "Total Count: #{@ft_customer_accounts_count}"
%br
= will_paginate @ft_customer_accounts
%br
%table.table.table-bordered.table-striped.table-hover
  .thead
    %th{:style=>'text-align:left; background-color: lightblue;'}
    %th{:style=>'text-align:left; background-color: lightblue;'}
    %th{:style=>'text-align:left; background-color: lightblue;'}
    %th{:style=>'text-align:left; background-color: lightblue;'} 
      Enabled ? 
    %th{:style=>'text-align:left; background-color: lightblue;'} 
      Customer ID
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Account No
  .tbody
    - @ft_customer_accounts.each do |ft_customer_account|
      %tr
        %td{:style=>'text-align:left;'}
          = link_to 'Show', ft_customer_account
        %td{:style=>'text-align:left;'}
          = link_to 'Edit', edit_ft_customer_account_path(ft_customer_account)
        %td{:style=>'text-align:left;'}
          - if ft_customer_account.approval_status == 'U'
            = link_to 'Cancel', ft_customer_account, :method => :delete, :data => { :confirm => 'Are you sure?' }
          - else
            = ""
        %td{:style=>'text-align:left;'}
          = ft_customer_account.is_enabled
        %td{:style=>'text-align:left;'}
          = ft_customer_account.customer_id
        %td{:style=>'text-align:left;'}
          = ft_customer_account.account_no
