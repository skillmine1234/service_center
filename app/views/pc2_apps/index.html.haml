%br
= link_to 'New PC2 App', new_pc2_app_path
%br
%br
%h1 Listing PC2 Apps
%h2.collapsible
  Advanced Search
  %span.caret
.collapsible-content
  = render :partial => 'advanced_search'
%br
= "Total Count: #{@pc2_apps_count}"
%br
= will_paginate @pc2_apps, :page_links => true
%br
%table.table.table-bordered.table-striped.table-hover
  .thead
    %th{:style=>'text-align:left; background-color: lightblue;'}
    %th{:style=>'text-align:left; background-color: lightblue;'}
    %th{:style=>'text-align:left; background-color: lightblue;'}
      App ID
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Customer ID
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Is Enabled?

  .tbody
    - @pc2_apps.each do |pc2_app|
      %tr
        %td{:style=>'text-align:left;'}
          = link_to 'Show', pc2_app
        %td{:style=>'text-align:left;'}
          = link_to 'Edit', edit_pc2_app_path(pc2_app)
        %td{:style=>'text-align:left;'}
          = pc2_app.app_id
        %td{:style=>'text-align:left;'}
          = pc2_app.customer_id
        %td{:style=>'text-align:left;'}
          = pc2_app.is_enabled