.form-horizontal.show_form
  .form-main-with-color{:style=>'background-color: #F1F2F8; height: 662px;'}
    #form-details
      %h3 I-Collect Notify Transaction 
      %br
      %p{:style => 'text-align:left; padding-left:6px; padding-bottom:17px'}
        - can = can? :edit, @icol_notify_transaction
        %a.btn{:href => "#{!(can) ? '#' : '/icol_notify_transactions/' + @icol_notify_transaction.id.to_s + '/edit'}", :role => "button", :class => "btn btn-primary #{(can) ? '' : 'disabled'}"} Edit

      %table.table.no-border{:style=>"table-layout: fixed; width: 100%;"}
        - if !@icol_notify_transaction.nil?
          %tr
            %td.label Form Errors
            %td.value
              = ' '
            %td#msg-error
              = error_message_for(@icol_notify_transaction, :base, :prepend_text => "")
          %tr
            %td.label Company Id
            %td.value
              = @icol_notify_transaction.compny_id
            %td#msg-error
              = error_message_for(@icol_notify_transaction, :compny_id, :prepend_text => "")
          %tr
            %td.label Company Name
            %td.value
              = @icol_notify_transaction.comapny_name
            %td#msg-error
              = error_message_for(@icol_notify_transaction, :comapny_name, :prepend_text => "")
          %tr
            %td.label Transfer Mode
            %td.value
              = @icol_notify_transaction.trnsctn_mode
            %td#msg-error
              = error_message_for(@icol_notify_transaction, :trnsctn_mode, :prepend_text => "")
          %tr
            %td.label Transfer Number
            %td.value
              = @icol_notify_transaction.trnsctn_nmbr
            %td#msg-error
              = error_message_for(@icol_notify_transaction, :trnsctn_nmbr, :prepend_text => "")
          %tr
            %td.label Payment Status
            %td.value
              = @icol_notify_transaction.payment_status
            %td#msg-error
              = error_message_for(@icol_notify_transaction, :payment_status, :prepend_text => "")
          %tr
            %td.label Template Id
            %td.value
              = @icol_notify_transaction.template_id
            %td#msg-error
              = error_message_for(@icol_notify_transaction, :template_id, :prepend_text => "")           
          %tr
            %td.label Template Data
            %td.value
              = @icol_notify_transaction.template_data
            %td#msg-error
              = error_message_for(@icol_notify_transaction, :template_data, :prepend_text => "")
      = link_to 'Back to Todays UPI Transcations', icol_notify_transactions_path
