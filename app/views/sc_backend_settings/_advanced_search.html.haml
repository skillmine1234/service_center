%h2.collapsible
  Advanced Search
  %span.caret
.collapsible-content
  = form_tag sc_backend_settings_path, :method => :put, :class => 'form-horizontal', :autocomplete=>"off", id: 'advanced_search' do
    .control-group
      = label_tag "Backend Code", "Backend Code", :class => 'control-label'
      = text_field_tag :backend_code, params[:backend_code]
    .control-group
      = label_tag "Service Code", "Service Code", :class => 'control-label'
      = text_field_tag :service_code, params[:service_code]
    .control-group
      = label_tag "App ID", "App ID", :class => 'control-label'
      = text_field_tag :app_id, params[:app_id]

    = hidden_field_tag :page, params[:page] || 1

    .form-actions
      = submit_tag "Search", :name => nil, :class => 'btn btn-primary', :id => "adv_search_button",onclick: "$('#page').val(1)"
      = button_tag "Reset", :type => 'button', :value=>'Reset', :class => 'btn', :id => 'adv_search_reset_button'

= advanced_search_page_links
