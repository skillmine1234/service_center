%h2.collapsible
  Advanced Search
  %span.caret
.collapsible-content
  = form_tag ic001_incoming_records_path, :method => :post, :class => 'form-horizontal', :autocomplete=>"off", :id => 'advanced_search' do
    .control-group
      = label_tag "Anchor Account ID", nil, :class => 'control-label'
      = text_field_tag :anchor_account_id, params[:anchor_account_id]
    .control-group
      = label_tag "Invoice No", nil, :class => 'control-label'
      = text_field_tag :invoice_no, params[:invoice_no]
    .control-group
      = label_tag "Invoice Amount", nil, :class => 'control-label' 
      = text_field_tag :from_amount, params[:from_amount]
      To
      = text_field_tag :to_amount, params[:to_amount]
    = hidden_field_tag :file_name, params[:file_name]
    = hidden_field_tag :status, params[:status]
    = hidden_field_tag :page, params[:page]
    .form-actions
      = submit_tag "Search", :name => nil, :class => 'btn btn-primary', :id => "adv_search_button",onclick: "$('#page').val(1)"
      = button_tag "Reset", :type => 'button', :value=>'Reset', :class => 'btn', :id => 'adv_search_reset_button'

= advanced_search_page_links
