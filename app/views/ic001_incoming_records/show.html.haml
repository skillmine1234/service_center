.form-horizontal.show_form
  .form-main-with-color{:style=>'background-color: #F1F2F8;  height:630px;'}
    #form-details
      %h3 Instant Credit 001 Incoming Record
      %br
      %p{:style => 'text-align:left; padding-left:6px; padding-bottom:17px;'}
      %table.table.no-border{:style=>"table-layout: fixed; width: 100%;"}
        %tr
          %td.label Version
          %td.value
            = link_to "#{audit_count(@ic_record.incoming_file_record)}", :controller => :ic001_incoming_records, :action => :audit_logs, :version_id => audit_count(@ic_record.incoming_file_record), :id => @ic_record.incoming_file_record_id
        %tr
          %td.label Record Text
          %td.value
            - if @ic_record.incoming_file_record.record_txt.nil?
              .span{:class =>"has-tooltip", "data-toggle" => 'tooltip',"title" => "No Record Text Available for this record", "data-placement" => 'bottom', "data-html" => true}
                Show Record Text
            - else
              = link_to "Show Record Text", "#", :class => 'show_record_text', :href => "#recordText", data: { record_txt: @ic_record.incoming_file_record.record_txt}
        %tr
          %td.label Serial No.
          %td.value
            = @ic_record.sl_no
        %tr
          %td.label Anchor Customer ID
          %td.value
            = @ic_record.anchor_cust_id
        %tr
          %td.label Anchor Account ID
          %td.value
            = @ic_record.anchor_account_id
        %tr
          %td.label Dealer Account ID
          %td.value
            = @ic_record.dealer_account_id
        %tr
          %td.label Dealer Customer ID
          %td.value
            = @ic_record.dealer_cust_id
        %tr
          %td.label Drawdown Amount
          %td.value
            = @ic_record.drawdown_amount
        %tr
          %td.label Remarks
          %td.value
            = @ic_record.remarks
        %tr
          %td.label Invoice No
          %td.value
            = @ic_record.invoice_no
        %tr
          %td.label Invoice Amount
          %td.value
            = @ic_record.invoice_amount
        %tr
          %td.label Additional Field 1
          %td.value
            = @ic_record.additional_field1
        %tr
          %td.label Additional Field 2
          %td.value
            = @ic_record.additional_field2
        %tr
          %td.label Reference Number
          %td.value
            = @ic_record.ref_number
        %tr
          %td.label Created Date
          %td.value
            = @ic_record.created_date.try(:strftime, "%d/%m/%Y")
        %tr
          %td.label Book Date
          %td.value
            = @ic_record.book_date.try(:strftime, "%d/%m/%Y")
        %tr
          %td.label Status
          %td.value
            = @ic_record.status
        %tr
          %td.label Failure Reason
          %td.value
            = @ic_record.failure_reason
