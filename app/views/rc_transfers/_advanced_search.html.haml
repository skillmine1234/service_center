= form_tag '', :method => 'get', :class => 'form-horizontal', :autocomplete=>"off" do
  .control-group
    = label_tag "Rc Transfer Code", "Rc Transfer Code", :class => 'control-label'
    = text_field_tag :rc_code, params[:rc_code]
  .control-group
    = label_tag "Batch No", "Batch No", :class => 'control-label'
    = text_field_tag :batch_no, params[:batch_no]
  .control-group
    = label_tag "Started At", "Started At", :class => 'control-label'
    = text_field_tag :from_date, params[:from_date]
    To
    = text_field_tag :to_date, params[:to_date]
  .control-group
    = label_tag "Debit Account No", "Debit Account No", :class => 'control-label'
    = text_field_tag :debit_account_no, params[:debit_account_no]
  = hidden_field_tag :advanced_search, :true
  = hidden_field_tag :sc_service, params[:sc_service]
  .form-actions
    = submit_tag "Search", :name => nil, :class => 'btn btn-primary', :id => "adv_search_button"
    = button_tag "Reset", :type => 'button', :value=>'Reset', :class => 'btn reset-btn'

:javascript
  var in_advanced_search = true;
