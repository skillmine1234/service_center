%br
= link_to 'New IMT Customer', new_imt_customer_path
%br
%br
%h1 Listing IMT Customers
%h2.collapsible
  Advanced Search
  %span.caret
.collapsible-content
  = render :partial => 'advanced_search'
%br
= "Total Count: #{@imt_customers_count}"
%br
= will_paginate @imt_customers
%br
%table.table.table-bordered.table-striped.table-hover
  .thead
    %th{:style=>'text-align:left; background-color: lightblue;'}
    %th{:style=>'text-align:left; background-color: lightblue;'}
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Customer Code
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Customer Name
    %th{:style=>'text-align:left; background-color: lightblue;'} 
      Account No
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Customer Mobile No
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Expiry Period

  .tbody
    - @imt_customers.each do |imt_customer|
      %tr
        %td{:style=>'text-align:left;'}
          = link_to 'Show', imt_customer
        %td{:style=>'text-align:left;'}
          = link_to 'Edit', edit_imt_customer_path(imt_customer)
        %td{:style=>'text-align:left;'}
          = imt_customer.customer_code
        %td{:style=>'text-align:left;'}
          = imt_customer.customer_name
        %td{:style=>'text-align:left;'}
          = imt_customer.account_no
        %td{:style=>'text-align:left;'}
          = imt_customer.mobile_no
        %td{:style=>'text-align:left;'}
          = imt_customer.expiry_period

