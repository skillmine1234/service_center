= simple_form_for @imt_customer, :html => {:class=>'form-horizontal', :autocomplete=>"off", :id => "imt_customer_form"} do |f|
  .control-group
    = f.label ' '
    #msg-error
      = error_message_for(@imt_customer, :base, :prepend_text => "")
  .form-main
    = f.hidden_field :lock_version
    = f.hidden_field :approved_id
    = f.hidden_field :approved_version
    .control-group
      = f.label :customer_code, "*Customer ID", :class => 'control-label'
      = f.text_field :customer_code, :maxlength => 15
      #msg-error
        = error_message_for(@imt_customer, :customer_code, :prepend_text => "")
    .control-group
      = f.label :customer_name, "*Customer Name", :class => 'control-label'
      = f.text_field :customer_name, :maxlength => 100
      #msg-error
        = error_message_for(@imt_customer, :customer_name, :prepend_text => "")
    .control-group
      = f.label :contact_person, "*Contact Person", :class => 'control-label'
      = f.text_field :contact_person, :maxlength => 100
      #msg-error
        = error_message_for(@imt_customer, :contact_person, :prepend_text => "")
    .control-group
      = f.label :email_id, "*Email ID", :class => 'control-label'
      = f.text_field :email_id, :maxlength => 100
      #msg-error
        = error_message_for(@imt_customer, :email_id, :prepend_text => "")
    .control-group
      = f.label :app_id, "*App ID", :class => 'control-label'
      = f.text_field :app_id, :maxlength => 50
      #msg-error
        = error_message_for(@imt_customer, :app_id, :prepend_text => "")
    .control-group
      = f.label :identity_user_id, "*Identity User ID", :class => 'control-label'
      = f.text_field :identity_user_id, :maxlength => 20
      #msg-error
        = error_message_for(@imt_customer, :identity_user_id, :prepend_text => "")
    .control-group
      = f.label :is_enabled, "Is Enabled ?", :class => 'control-label'
      = f.check_box :is_enabled, {},"Y","N"
      #msg-error
        = error_message_for(@imt_customer, :is_enabled, :prepend_text => "")
    .control-group
      = f.label :account_no, "*Account No", :class => 'control-label'
      = f.text_field :account_no, :maxlength => 16
      #msg-error
        = error_message_for(@imt_customer, :account_no, :prepend_text => "")
    .control-group
      = f.label :mobile_no, "*Mobile No", :class => 'control-label'
      = f.text_field :mobile_no, :maxlength => 10
      #msg-error
        = error_message_for(@imt_customer, :mobile_no, :prepend_text => "")
    .control-group
      = f.label :expiry_period, "*Expiry Period(in days)", :class => 'control-label'
      = f.number_field :expiry_period, :min => 1
      #msg-error
        = error_message_for(@imt_customer, :expiry_period, :prepend_text => "")
    .control-group
      = f.label :txn_mode, "*Transaction Mode", :class => 'control-label'
      = f.select :txn_mode, options_for_select(ImtCustomer.options_for_txn_mode, @imt_customer.txn_mode),:prompt => 'SELECT'
      #msg-error
        = error_message_for(@imt_customer, :txn_mode, :prepend_text => "")
  .form-extended
    .control-group
      = f.label :address_line1, "Address Line 1", :class => 'control-label'
      = f.text_area :address_line1, :maxlength => 255
      #msg-error
        = error_message_for(@imt_customer, :address_line1, :prepend_text => "")
    .control-group
      = f.label :address_line2, "Address Line 2", :class => 'control-label'
      = f.text_area :address_line2, :maxlength => 255
      #msg-error
        = error_message_for(@imt_customer, :address_line2, :prepend_text => "")
    .control-group
      = f.label :address_line3, "Address Line 3", :class => 'control-label'
      = f.text_area :address_line3, :maxlength => 255
      #msg-error
        = error_message_for(@imt_customer, :address_line3, :prepend_text => "")
    .control-group
      = f.label :country, "Country", :class => 'control-label'
      = country_select("imt_customer", "country", selected: "#{@imt_customer.country.nil? ? 'IN' : @imt_customer.country}")
      #msg-error
        = error_message_for(@imt_customer, :country, :prepend_text => "")

  .form-actions
    - (f.object.new_record?) ? label_name = "Create" : label_name = "Update"
    = f.button "submit" ,:class=>"btn btn-primary", :id => 'submit_customer', :value => label_name + ' Customer'
    = link_to :Cancel,'/imt_customers', :name => 'cancel', :class=>"cancel btn"

