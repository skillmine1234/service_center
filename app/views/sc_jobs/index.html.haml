%br
%br
%h1 Listing SC Jobs
%h2.collapsible
  Advanced Search
  %span.caret
.collapsible-content
  = render :partial => 'advanced_search'
%br
= "Total Count: #{@sc_jobs_count}"
%br
= will_paginate @sc_jobs
%br

%table.table.table-bordered.table-striped.table-hover
  .thead
    %th{:style=>'text-align:left; background-color: lightblue;'}
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Code
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Service
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Run Now
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Pause

  .tbody
    - @sc_jobs.each do |sc_job|
      %tr
        %td{:style=>'text-align:left;'}
          = link_to 'Show', sc_job
        %td{:style=>'text-align:left;'}
          = sc_job.code
        %td{:style=>'text-align:left;'}
          = sc_job.sc_service.try(:name)
        %td{:style=>'text-align:left;'}
          - if sc_job.run_now == 'N'
            = link_to 'Run', run_sc_job_path(sc_job), method: :put, class: 'btn btn-primary'
          - else
            = '-'
        %td{:style=>'text-align:left;'}
          - if sc_job.paused == 'N'
            = link_to 'Pause', pause_sc_job_path(sc_job), method: :put, class: 'btn btn-primary'
          - else
            = '-'

